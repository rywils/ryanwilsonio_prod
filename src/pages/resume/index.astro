---
import Layout from "../../layouts/Layout.astro";
import { experiences } from "../../data/experiences";
import { Download } from '@lucide/astro';

---

<Layout title="Resume">
<div class="w-full flex justify-end max-w-4xl"><a
      href="/resume/resume_ryanwilsonio.pdf"><button class="flex items-center gap-3 px-3 py-2 rounded-lg border-2 border-[var(--primary-green)] text-[var(--primary-green)] hover:bg-[var(--primary-green)]/10 transition-all hover:scale-105 active:scale-95 font-semibold justify-between ">Download<Download/></button></a></div>

<article class="mx-auto max-w-4xl px-6 text-gray-300 ">
  <!-- Header -->
  <section class="mb-12">
    <h1 class="text-4xl font-bold">Ryan Wilson</h1>
    <p class="text-lg text-gray-400 mt-1">
      Full-Stack Developer · Systems & Network Engineer
    </p>

    <div class="mt-4 text-sm text-gray-400 space-y-1">
      <div>Urbandale, IA</div>
      <div>
        <a href="mailto:ryan@ryanwilson.io" class="hover:text-white">
          ryan@ryanwilson.io
        </a>
        ·
        <a href="https://ryanwilson.io" class="hover:text-white">
          ryanwilson.io
        </a>
        ·
        <a href="https://linkedin.com/in/rywils" class="hover:text-white">
          linkedin.com/in/rywils
        </a>
      </div>
    </div>
</section>

  <!-- Summary -->
  <section class="mb-12">
    <h2 class="text-xl font-semibold mb-3">Summary</h2>
    <p class="text-gray-400 leading-relaxed">
      A highly versatile Full-Stack Developer and Systems Engineer with experience
      building modern web applications, managing cloud infrastructure, and supporting
      enterprise IT environments. Comfortable owning projects end-to-end — from client
      discovery and architecture to deployment, security, and long-term support.
    </p>
  </section>

  <!-- Core Competencies -->
  <section class="mb-12">
    <h2 class="text-xl font-semibold mb-4">Core Competencies</h2>

    <div class="grid grid-cols-1 sm:grid-cols-2 gap-4 text-sm text-gray-400">
      <div>
        <strong class="text-gray-300">Development:</strong><br />
        React / Next.js, Vue / Nuxt, SvelteKit, Laravel, Node.js, Tailwind CSS,
        REST & GraphQL APIs
      </div>

      <div>
        <strong class="text-gray-300">Cloud & DevOps:</strong><br />
        AWS (EC2, S3, VPC, IAM), Vercel, DigitalOcean, CI/CD, Redis, Docker
      </div>

      <div>
        <strong class="text-gray-300">Systems & Networking:</strong><br />
        Linux, Windows Server, VMware, Cisco Routing & Switching, Meraki,
        Active Directory
      </div>

      <div>
        <strong class="text-gray-300">Security:</strong><br />
        Fortinet Firewalls, VPNs, SIEM tools, vulnerability assessment,
        endpoint protection
      </div>
    </div>
  </section>

  <!-- Work Experience -->
  <section class="mb-12">
    <h2 class="text-xl font-semibold mb-6">Professional Experience</h2>

    <table class="w-full border-separate border-spacing-y-4">
      <tbody>
        {experiences.map(job => (
          <tr class="align-top">
            <td class="py-2">
              <div class="flex items-center gap-4">
                <img
                  src={job.icon.src}
                  alt={job.company}
                  class="h-12 w-12 rounded-full object-contain bg-neutral-900 p-2"
                />
                <div>
                  <div class="font-semibold text-[15px]">{job.title}</div>
                  <div class="text-sm text-gray-400">{job.company}</div>
                </div>
              </div>

              <p class="mt-2 ml-16 text-sm text-gray-400 leading-relaxed">
                {job.description}
              </p>

              <ul class="mt-2 ml-20 list-disc text-sm text-gray-400 space-y-1">
                {job.achievements.map(a => (
                  <li>{a}</li>
                ))}
              </ul>
            </td>

            <td class="py-2 text-sm text-gray-400 text-right whitespace-nowrap">
              {job.period}
            </td>
          </tr>
        ))}
      </tbody>
    </table>
  </section>

  <!-- Education -->
  <section class="mb-12">
    <h2 class="text-xl font-semibold mb-3">Education</h2>

    <div class="text-sm text-gray-400">
      <div class="font-medium text-gray-300">
        Des Moines Area Community College
      </div>
      <div>
        Associate in Applied Science — Information Technology (Network Administration)
      </div>
      <div>Graduated May 2016</div>
    </div>
  </section>

  <!-- PDF -->
  <div class="text-sm text-gray-500">
    Prefer a PDF?
    <a
      href="/resume/resume_ryanwilsonio.pdf"
      class="ml-1 underline hover:text-gray-300"
    >
      Download Resume
    </a>
</div>

</article>

</Layout>
