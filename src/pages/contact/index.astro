  function hideContactElements() {
    if (typeof window !== 'undefined' && !window.location.pathname.startsWith('/contact')) {
      return;
    }
  
    const contactComponent = document.getElementById("contact") as HTMLElement | null;
    if (contactComponent) {
      contactComponent.className = "px-4 sm:px-6 lg:px-8 relative overflow-hidden"
    }
  const contactForm = document.getElementById("contact-grid") as HTMLElement | null;
  if (contactForm) {
    contactForm.className = "w-full"
  }

  const contactGrid = document.getElementById("contact-grid") as HTMLElement | null;
  if (contactGrid) {
    contactGrid.className = "grid lg:grid-cols-2 gap-12"
  }

  const contactInfo = document.getElementsByClassName("contact-info") as HTMLCollectionOf<HTMLElement> | null;
  if (contactInfo) {
    Array.from(contactInfo).forEach(element => {
      element.className = "hidden";
    });
  }
  // const contactHeading = document.getElementById("contact-heading") as HTMLElement | null;
  // if (contactHeading) {
  //   contactHeading.className = "hidden";
  // }
  // const contactUnderline = document.getElementById("contact-underline") as HTMLElement | null;
  // if (contactUnderline) {
  //   contactUnderline.className = "hidden";
  // }
  // const contactSecondaryHeading = document.getElementById("contact-secondary-heading") as HTMLElement | null;
  // if (contactSecondaryHeading) {
  //   contactSecondaryHeading.className = "hidden";
  // }

  // const contactSecondaryHeadingBlock = document.getElementById("contact-secondary-heading-block") as HTMLElement | null;
  // if (contactSecondaryHeadingBlock) {
  //   contactSecondaryHeadingBlock.className = "hidden";
  // }
  const contactSubmit = document.getElementById("contact-submit") as HTMLElement | null;
  if (contactSubmit) {
    contactSubmit.classList.add("w-full", "flex", "justify-center", "items-center", "mt-4");
  }

  // const contactInfoCard = document.getElementsByClassName("contact-info-card") as HTMLCollectionOf<HTMLElement> | null;
  // if (contactInfoCard) {
  //   contactInfoCard[0].classList.add("max-w-sm", "mx-auto");
  // }
  // const contactEmailSubtitle = document.getElementById("contact-email-subtitle") as HTMLElement | null;
  // if (contactEmailSubtitle) {
  //   contactEmailSubtitle.className = "text-muted-foreground text-sm text-center mx-auto";
  // }
  }
  // Run on initial page load
  hideContactElements();
  
  // Run after Astro page transitions
  document.addEventListener('astro:page-load', hideContactElements);
</script>
