---
import Contact from "@/components/Contact.astro";
import Layout from "../../layouts/Layout.astro";
const canonicalURL = new URL(Astro.url.pathname, Astro.site);
---

<Layout title="Contact Me" description="Contact page to be able to contact me with a simple to use form and contact email.">
  <section class="py-16">
    <div class="max-w-3xl mx-auto text-center mb-10">
      <h1 class="text-5xl font-bold text-(--primary-green)">Contact</h1>
      <div class="h-1 w-24 bg-gradient-to-r from-(--secondary-purple) to-(--primary-green) mx-auto mt-4"></div>
      <p class="mt-6 text-muted-foreground">
        Reach out using the form below or email me directly.
      </p>
    </div>

    <div class="flex justify-center">
      <Contact compact />
    </div>
  </section>
</Layout>
