---
import Layout from '../../layouts/Layout.astro';
import { Calendar, Clock, User, ArrowLeft } from '@lucide/astro';
import { getCollection } from 'astro:content';

export const prerender = true;

export async function getStaticPaths() {
  const posts = await getCollection('blog', ({ data }) => {
    return data.draft !== true;
  });
  
  return posts.map((post) => ({
    params: { slug: post.slug },
    props: { post },
  }));
}

const { post } = Astro.props;

// Add error handling
if (!post) {
  return Astro.redirect('/blog');
}

const { Content } = await post.render();

// Handle both single category and array of categories
const categories = Array.isArray(post.data.category) 
  ? post.data.category 
  : post.data.category 
    ? [post.data.category] 
    : [];
---

<Layout title={`${post.data.title} - Ryan Wilson`}>
  <article class="pt-24 pb-20 px-4 sm:px-6 lg:px-8 min-h-screen">
    <div class="max-w-4xl mx-auto">
      <a
        href="/blog"
        class="inline-flex items-center gap-2 text-[var(--primary-green)] hover:text-[var(--primary-blue)] transition-colors mb-8"
        data-astro-prefetch
      >
        <ArrowLeft size={20} />
        Back to Blog
      </a>

      <!-- Featured Image -->
      {post.data.image && (
        <img
          src={post.data.image}
          alt={post.data.title}
          class="w-full h-64 md:h-96 object-cover rounded-xl mb-8"
        />
      )}

      <!-- Title -->
      <h1 class="text-4xl md:text-5xl font-bold text-[var(--primary-green)] mb-6">
        {post.data.title}
      </h1>

      <!-- Info -->
      <div class="flex flex-wrap items-center gap-6 text-muted-foreground mb-6 pb-6 border-b border-[var(--primary-green)]/20">
        {post.data.date && (
          <span class="flex items-center gap-2">
            <Calendar size={16} />
            {post.data.date}
          </span>
        )}
        {post.data.readTime && (
          <span class="flex items-center gap-2">
            <Clock size={16} />
            {post.data.readTime}
          </span>
        )}
        {post.data.author && (
          <span class="flex items-center gap-2">
            <User size={16} />
            {post.data.author}
          </span>
        )}
      </div>

      <!-- Categories and Tags -->
      <div class="flex flex-wrap gap-2 mb-8">
        {categories.map((category) => (
          <span class="px-3 py-1 rounded-full bg-[var(--primary-green)]/20 border border-[var(--primary-green)]/30 text-sm font-semibold">
            {category}
          </span>
        ))}
        {post.data.tags?.map((tag) => (
          <span class="px-3 py-1 rounded-full bg-[var(--primary-blue)]/10 border border-[var(--primary-blue)]/30 text-sm">
            {tag}
          </span>
        ))}
      </div>

      <!-- Content -->
      <div class="prose prose-invert max-w-none markdown-content">
        <Content />
      </div>

      <div class="mt-12 pt-8 border-t border-[var(--primary-green)]/20">
        <h3 class="text-xl font-semibold text-[var(--primary-blue)] mb-4">
          Enjoyed this article?
        </h3>
        <a
          href="/blog"
          class="inline-block px-6 py-3 rounded-full border border-[var(--primary-green)] text-[var(--primary-green)] hover:bg-[var(--primary-green)]/10 transition-all"
          data-astro-prefetch
        >
          Read More Articles
        </a>
      </div>
    </div>
  </article>
</Layout>

<style>
  .markdown-content :global(h1) {
    font-size: 2.5rem;
    font-weight: 800;
    color: var(--primary-green);
    margin-top: 3rem;
    margin-bottom: 1.25rem;
  }

  .markdown-content :global(h2) {
    font-size: 2rem;
    font-weight: 700;
    color: var(--primary-blue);
    margin-top: 2.5rem;
    margin-bottom: 1rem;
  }

  .markdown-content :global(h3) {
    font-size: 1.5rem;
    font-weight: 600;
    color: var(--primary-blue);
    margin-top: 2rem;
    margin-bottom: 0.75rem;
  }

  .markdown-content :global(p) {
    margin-bottom: 1.25rem;
    line-height: 1.75;
    color: var(--muted-foreground);
  }

  .markdown-content :global(ul) {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
    margin: 1rem 0;
  }

  .markdown-content :global(li) {
    display: flex;
    align-items: flex-start;
    gap: 0.75rem;
  }

  .markdown-content :global(li::before) {
    content: "â–¹";
    color: var(--primary-green);
    font-size: 1.25rem;
    margin-top: 0.25rem;
    flex-shrink: 0;
  }

  .markdown-content :global(ol) {
    list-style-type: decimal;
    padding-left: 1.5rem;
    margin-bottom: 1.25rem;
  }

  .markdown-content :global(code) {
    background-color: rgba(0, 191, 255, 0.1);
    padding: 0.2rem 0.4rem;
    border-radius: 0.25rem;
    font-size: 0.875rem;
    color: var(--primary-blue);
  }

  .markdown-content :global(pre) {
    background-color: rgba(0, 0, 0, 0.3);
    padding: 1rem;
    border-radius: 0.5rem;
    overflow-x: auto;
    margin-bottom: 1.25rem;
  }

  .markdown-content :global(pre code) {
    background-color: transparent;
    padding: 0;
  }

  .markdown-content :global(strong) {
    color: var(--primary-green);
    font-weight: 600;
  }

  .markdown-content :global(a) {
    color: var(--primary-blue);
    text-decoration: underline;
    transition: color 0.2s;
  }

  .markdown-content :global(a:hover) {
    color: var(--primary-green);
  }

  .markdown-content :global(blockquote) {
    border-left: 4px solid var(--primary-green);
    padding-left: 1rem;
    margin-left: 0;
    margin-bottom: 1.25rem;
    font-style: italic;
    color: var(--muted-foreground);
  }
</style>
